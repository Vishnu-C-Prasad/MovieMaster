<script>
    $(document).ready(() => {
        setActiveTab('theatre-management-tab');
    });
</script>
<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Overview</span>
            <h3 class="page-title">Theatre Management</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Default Light Table -->
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4 p-3">
                <div class="card-header border-bottom">
                    <div class="row">
                        <h6 class="m-0">Theatre Owners</h6>
                        <a href="/admin/add-owners" class="btn btn-accent ml-auto">Add Owner</a>
                    </div>
                </div>
                <div class="card-body p-0 pb-3 text-center">
                    <table class="table table-responsive-sm mb-0" id="dataTable">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">#</th>
                                <th scope="col" class="border-0">Owner Name</th>
                                <th scope="col" class="border-0">Theatre Name</th>
                                <th scope="col" class="border-0">Details</th>
                                <th scope="col" class="border-0">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each owners}}
                            <tr id="{{this._id}}">
                                <td scope="row" class="serialNumber"></td>
                                <td>{{this.ownerName}}</td>
                                <td>{{this.theatreName}}</td>
                                <td><a href="/admin/theatre-overview/{{this._id}}" class="btn btn-accent">View</a></td>
                                <td>
                                    <div class="row justify-content-center">
                                        <a href="/admin/edit-owner/{{this._id}}" class="btn btn-accent mr-md-2">Edit</a>
                                        <button class="btn btn-danger mt-2 mt-sm-0" onclick="vex.dialog.confirm({ message: 'Are you sure you want to delete {{this.ownerName}} ?', callback: (value) => { if (value) deleteItem(event, '{{this._id}}', '/admin/delete-owner'); } });">Delete</button>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- End Default Light Table -->
</div>