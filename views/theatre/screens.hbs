<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Overview</span>
            <h3 class="page-title">Screens</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Default Light Table -->
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4 p-3">
                <div class="card-header border-bottom">
                    <div class="row">
                        <a href="/theatre/add-screens" class="btn btn-accent ml-auto">Add Screen</a>
                    </div>
                </div>
                <div class="card-body p-0 pb-3 text-center">
                    <table class="table table-responsive-sm mb-0" id="dataTable">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">#</th>
                                <th scope="col" class="border-0">Screen Name</th>
                                <th scope="col" class="border-0">Total Seats</th>
                                <th scope="col" class="border-0">Schedule</th>
                                <th scope="col" class="border-0">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each screens}}
                            <tr id="{{this._id}}">
                                <td scope="row" class="serialNumber"></td>
                                <td>{{this.screenName}}</td>
                                <td>{{this.seats}}</td>
                                <td><a href="/theatre/view-schedule/{{this._id}}" class="btn btn-accent">View
                                        Schedule</a></td>
                                <td>
                                    <div class="row justify-content-center">
                                        <a href="/theatre/edit-screen/{{this._id}}" class="btn btn-accent">Edit</a>
                                        <button class="btn btn-danger mx-2 my-2 my-sm-0"
                                            onclick="vex.dialog.confirm({ message: 'Are you sure you want to delete {{this.screenName}} ?', callback: (value) => { if (value) deleteItem(event, '{{this._id}}', '/theatre/delete-screen'); } });">Delete</button>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- End Default Light Table -->
</div>