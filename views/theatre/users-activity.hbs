<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Overview</span>
            <h3 class="page-title">Users Activity Track</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Default Light Table -->
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4 p-3">
                <div class="card-header border-bottom">
                    <div class="row">
                        <h6 class="m-0">Users</h6>
                    </div>
                </div>
                <div class="card-body p-0 pb-3 text-center">
                    <table class="table table-responsive-sm mb-0" id="dataTable">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">#</th>
                                <th scope="col" class="border-0">Name</th>
                                <th scope="col" class="border-0">Date of Join</th>
                                <th scope="col" class="border-0">Last Book</th>
                                <th scope="col" class="border-0">Status</th>
                                <th scope="col" class="border-0">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <th scope="row" class="serialNumber"></th>
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{#parseDate this.joinDate}}{{/parseDate}}</td>
                                {{#if this.orderDetails}}
                                <td>{{this.orderDetails.0.orderDate}}</td>
                                <td class="badge
                                {{#IF this.orderDetails.0.status '==' "booked"}}badge-success{{else}}badge-danger
                                    {{/IF}} text-uppercase px-3"
                                    style="width: 75% !important; max-width: 75% !important;">
                                    {{this.orderDetails.0.status}}</td>
                                <td>Rs.{{this.orderDetails.0.totalAmount}}</td>
                                {{else}}
                                <td>Nothing yet !</td>
                                <td class="badge badge-light text-uppercase"
                                    style="width: 75% !important; max-width: 75% !important;">...</td>
                                <td>...</td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- End Default Light Table -->
</div>