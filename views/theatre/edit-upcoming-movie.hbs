<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Action</span>
            <h3 class="page-title">Edit Upcoming Movie</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Default Light Table -->
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4 p-3">
                <div class="card-header border-bottom">
                    <div class="row">
                        <h5 class="text-accent">Enter Movie Details</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-2 mb-4">
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <form action="/theatre/edit-upcoming-movie" method="POST" enctype="multipart/form-data">
                                    <div class="form-group row" hidden>
                                        <div class="col-md-3 text-md-right">
                                            <label for="movieId">Movie ID</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="text" name="movieId" value="{{movie._id}}" class="form-control"
                                                required id="movieId">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-right">
                                            <label for="movieTitle">Movie Title</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="text" name="movieTitle" value="{{movie.movieTitle}}"
                                                class="form-control" required id="movieTitle">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-right">
                                            <label for="cast">Cast</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="text" name="cast" value="{{movie.cast}}" class="form-control"
                                                required id="cast">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-right">
                                            <label for="director">Director</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="text" name="director" value="{{movie.director}}"
                                                class="form-control" required id="director">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-right">
                                            <label for="releaseDate">Release Date</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="date" name="releaseDate" value="{{movie.releaseDate}}"
                                                class="form-control" required id="releaseDate">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-right">
                                            <label for="runTime">Run Time</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="time" name="runTime" value="{{movie.runTime}}"
                                                class="form-control" required id="runTime">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-right">
                                            <label for="language">Language</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="text" name="language" value="{{movie.language}}"
                                                class="form-control" required id="language">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-right">
                                            <label for="type">Type</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="text" name="type" value="{{movie.type}}" class="form-control"
                                                required id="type">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-right">
                                            <label for="trailerLink">Trailer Link</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="url" name="trailerLink" value="{{movie.trailerLink}}"
                                                class="form-control" required id="trailerLink">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3 text-md-right">
                                            <label for="">Movie Poster</label>
                                        </div>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="btn btn-primary btn-sm" for="my-file-selector">
                                                        <input id="my-file-selector" type="file" name="moviePoster"
                                                            style="display:none" onchange="loadImage(event);">
                                                        Choose Image
                                                    </label>
                                                </div>
                                                <div class="col-md-9">
                                                    <div class="ml-md-3 mt-3 mt-md-0" style="width: 10rem;">
                                                        <img src="/images/movies/upcoming-movies/posters/{{movie._id}}.jpg"
                                                            alt="" id="viewImage" class="img-fluid" width="100%"
                                                            height="auto">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <a href="/theatre/upcoming-movies" class="btn btn-danger w-25">Cancel</a>
                                        <button type="submit" class="btn btn-accent w-25">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Default Light Table -->
</div>